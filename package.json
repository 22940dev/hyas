{
  "name": "hyas",
  "version": "1.2.6",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "start": "hugo server --disableFastRender",
    "build": "hugo --minify && npm run build:functions",
    "build:functions": "netlify-lambda build assets/lambda",
    "build:preview": "npm run build -D -F",
    "server": "hugo server",
    "clean": "rimraf public resources functions",
    "clean:deps": "node scripts/clean-deps",
    "copy:deps": "node scripts/copy-deps",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js assets/lambda config",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint *.md content/**/*.md",
    "test": "npm run -s lint"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@fullhuman/postcss-purgecss": "^1.3",
    "autoprefixer": "^9.8",
    "eslint": "^7.2",
    "markdownlint-cli": "^0.23.2",
    "netlify-lambda": "^1.6",
    "postcss-cli": "^7.1",
    "purgecss-whitelister": "^2.4",
    "rimraf": "^3.0",
    "shelljs": "^0.8.4",
    "stylelint": "^13.6",
    "stylelint-config-standard": "^20.0"
  },
  "dependencies": {
    "bootstrap": "^4.5",
    "lazysizes": "^5.2"
  }
}
